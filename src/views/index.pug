extends ./layout

block vars
  - var activeNav = 'home'

block content
  h2.section-title Inicio
  .card
    p.lead Usa la navegacion superior para ir a cada seccion.
  if counts
    .card
      h3.summary-title Resumen
      .summary-grid
        article.summary-card
          span.label Clientes
          span.value= counts.customers
        article.summary-card
          span.label Productos
          span.value= counts.products
        article.summary-card
          span.label Depositos
          span.value= counts.warehouses
        article.summary-card
          span.label Stock
          span.value= counts.stock
        article.summary-card
          span.label Pedidos
          span.value= counts.orders
        article.summary-card
          span.label Envios
          span.value= counts.shipments
        article.summary-card
          span.label Facturas
          span.value= counts.invoices
