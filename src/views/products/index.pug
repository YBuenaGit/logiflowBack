extends ../layout

block content
  h2 Productos
  if !products || products.length === 0
    p No hay productos
  else
    table(border="1" cellpadding="6" cellspacing="0")
      thead
        tr
          th id
          th sku
          th nombre
          th precio
          th activo
      tbody
        each p in products
          tr
            td= p.id
            td= p.sku
            td= p.name
            td= p.priceARS
            td= p.active ? 's√≠' : 'no'

